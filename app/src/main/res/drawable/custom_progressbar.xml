<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="@color/custom_gray"
            android:centerColor="@color/custom_gray"
            android:centerY="0.5"
            android:endColor="@color/custom_gray"
            android:type="linear" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="@color/custom_gray"
                android:centerColor="@color/custom_gray"
                android:centerY="0.5"
                android:endColor="@color/custom_gray"
                android:type="linear" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="@color/custom_red"
                android:centerColor="@color/custom_red"
                android:centerY="0.5"
                android:endColor="@color/custom_red"
                android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>
