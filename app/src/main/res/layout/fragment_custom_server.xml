<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_black2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/defaultServerPageTopLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Server Configuration"
                android:textColor="@color/custom_gray"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local IP"
                android:textColor="@color/custom_gray"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/customServerLocalIpEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="192.168.1.1"
                android:paddingBottom="20dp"
                android:paddingStart="0dp"
                android:backgroundTint="@color/custom_edit_text_simple"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port"
                android:textColor="@color/custom_gray"
                android:textSize="19dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/customServerPortEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Port"
                android:paddingBottom="20dp"
                android:paddingStart="0dp"
                android:inputType="number"
                android:maxLength="4"
                android:backgroundTint="@color/custom_edit_text_simple"/>


            <LinearLayout
                android:id="@+id/authRandomCodeLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auth Password For Connection"
                    android:textColor="@color/custom_gray"
                    android:textSize="19dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/custom_border_gray"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/authCodeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="----"
                        android:textColor="@color/custom_gray"
                        android:textSize="29dp"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"/>

                    <ImageView
                        android:id="@+id/refreshIcon"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone"
                        android:src="@drawable/custom_refresh_icon_gray"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/authCodeProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:progress="100"
                    android:max="100"
                    android:min="0"/>
            </LinearLayout>



        </LinearLayout>



        <RelativeLayout
            android:id="@+id/advancedSettingsRelativeLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/defaultServerPageTopLinear"
            android:layout_marginTop="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Advanced Settings "
                android:textColor="@color/custom_gray"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:src="@drawable/arrow_drop_down_gray" />

            <LinearLayout
                android:id="@+id/dropDownLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_below="@+id/textView1">

                <LinearLayout
                    android:id="@+id/uploadFileLinear"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="50dp"
                    android:background="@drawable/custom_border_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Folder"
                        android:textColor="@color/white"
                        android:textSize="19dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/copyProgressLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Folder copying in progress... Please Wait"
                        android:textColor="@color/custom_gray"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <ProgressBar
                        android:id="@+id/copyFolderProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:max="100"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/folderListLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/custom_border_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected folder is "
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/currentFolderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="NONE"
                            android:textColor="@color/custom_red"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected starter page is "
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/currentFileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="NONE.html"
                            android:textColor="@color/custom_red"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Click here to change"
                        android:textColor="@color/white"
                        android:textSize="11dp" />

                </LinearLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/authInfo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/info"
                    android:translationZ="1dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_border_gray">

                <Button
                    android:id="@+id/authButtonClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Close Authentication"
                    android:background="@drawable/button_selected"
                    app:backgroundTint="@color/custom_red"
                    android:textColor="#FFFFFF"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#6a6a6a"/>

                <Button
                    android:id="@+id/authButtonOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_selected"
                    android:text="Open Authentication"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="#FFFFFF"/>
                </LinearLayout>


            </RelativeLayout>






            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>




</ScrollView>